<%- include('header'); -%>

    <body>
        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>
        <div class="box">
            <% newListItem.forEach(function(item,i){ %>
                <form action="/checkBox" method="post">
                   <div class="item">
                        <input type="checkbox" name="cBox" value="<%=item._id%>" onchange="this.form.submit()">
                        <p> <%= item.name %> </p>
                    </div>
                    <input type="hidden" name="Title_heading" value="<%=listTitle%>">
                </form>

            <% }) %>
                        
            
            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="Type something here" autocomplete="off">
                <button type="submit" name="list" value="<%=listTitle%>" >+</button>
            </form>
        </div>
<%- include('footer'); -%>